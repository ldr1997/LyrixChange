<% if current_user %>
  Logged in as <%= current_user.username %>.
  <%= link_to "My Profile", current_user %> | 
  <%= link_to "Log Out", logout_path %>
<% else %>
  <%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %>
<% end %>
<p id="notice"><%= notice %></p>


<h1>Demos</h1>

<%= link_to 'New Demo', new_demo_path %>

<% @demos.each do |demo| %>
	<div class="card" style="width: 18rem;">
		<div class="card-body">
			<h5 class="card-title"><%= demo.title %></h5>
			<h6 class="card-subtitle mb-2 text-muted"><%= demo.user.full_name %></h6>
			<p class="card-text"><%= demo.description %></p>
		</div>
		<% if demo.user == current_user %>
			<%= link_to 'Edit', edit_demo_path(demo) %>
			<%= link_to 'Destroy', demo, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</div>
<% end %>
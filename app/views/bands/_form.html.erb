
<%= simple_form_for(@band) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :genres %>
    <%#= f.collection_select(:band, :ids, User.all, :id, :username, {}, { :multiple => true } )%>
    <%= f.input :user_ids, collection: User.where.not(id: current_user.id), as: :check_boxes, label_method: :username, value_mehod: :id, label: "Members", include_blank: false %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>
